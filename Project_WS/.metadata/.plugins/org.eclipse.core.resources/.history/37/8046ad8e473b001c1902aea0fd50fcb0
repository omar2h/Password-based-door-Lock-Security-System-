#include "App.h"

void App_init(){
	//UART_ConfigType UART_Configurations = {BAUDRATE_9600, DATA_8BITS, NO_PARITY, ONE_STOP_BIT};

	UART_init(9600);
	LCD_init();
	App_start();

}

void App_start(){
	uint8 key;
	while(1){
	key = UART_recieveByte();

	if( (key >= 0) && (key <= 9) )
	{
		LCD_intgerToString(key);
	}
	else
	{
		LCD_displayCharacter(key);
	}
	}
}
